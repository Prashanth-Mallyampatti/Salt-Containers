# -*- coding: utf-8 -*-
# vim: ft=jinja

{## Start imports as ##}
{% import_yaml 'autofs/defaults.yaml' as default_settings %}
{% import_yaml 'autofs/osfamilymap.yaml' as osfamilymap %}
{% import_yaml 'autofs/osmap.yaml' as osmap %}
{% import_yaml 'autofs/osfingermap.yaml' as osfingermap %}

{% set defaults = salt['grains.filter_by'](default_settings,
    default='autofs',
    merge=salt['grains.filter_by'](osfamilymap, grain='os_family',
      merge=salt['grains.filter_by'](osmap, grain='os',
        merge=salt['grains.filter_by'](osfingermap, grain='osfinger',
          merge=salt['pillar.get']('autofs:lookup', default={})
        )
      )
    )
) %}

{## Merge the autofs pillar ##}
{% set autofs = salt['pillar.get']('autofs', default=defaults, merge=True) %}
