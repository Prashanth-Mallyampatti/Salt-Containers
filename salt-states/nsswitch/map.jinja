# -*- coding: utf-8 -*-
# vim: ft=jinja

{## Start imports as ##}
{% import_yaml 'nsswitch/defaults.yaml' as default_settings %}
{% import_yaml 'nsswitch/osfamilymap.yaml' as osfamilymap %}
{% import_yaml 'nsswitch/osmap.yaml' as osmap %}
{% import_yaml 'nsswitch/osfingermap.yaml' as osfingermap %}

{% set defaults = salt['grains.filter_by'](default_settings,
    default='nsswitch',
    merge=salt['grains.filter_by'](osfamilymap, grain='os_family',
      merge=salt['grains.filter_by'](osmap, grain='os',
        merge=salt['grains.filter_by'](osfingermap, grain='osfinger',
          merge=salt['pillar.get']('nsswitch:lookup', default={})
        )
      )
    )
) %}

{## Merge the nsswitch pillar ##}
{% set nsswitch = salt['pillar.get']('nsswitch', default=defaults, merge=True) %}
