# vim: ft=jinja

{## Start imports as ##}
{% import_yaml 'nrpe/defaults.yaml' as default_settings %}
{% import_yaml 'nrpe/osfamilymap.yaml' as osfamilymap %}
{% import_yaml 'nrpe/osmap.yaml' as osmap %}
{% import_yaml 'nrpe/osfingermap.yaml' as osfingermap %}

{% set defaults = salt['grains.filter_by'](default_settings,
    default='nrpe',
    merge=salt['grains.filter_by'](osfamilymap, grain='os_family',
      merge=salt['grains.filter_by'](osmap, grain='os',
        merge=salt['grains.filter_by'](osfingermap, grain='osfinger',
          merge=salt['pillar.get']('nrpe:lookup', default={})
        )
      )
    )
) %}

{## Merge the nrpe pillar ##}
{% set nrpe = salt['pillar.get']('nrpe', default=defaults, merge=True) %}
